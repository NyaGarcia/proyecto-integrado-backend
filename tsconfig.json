{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "paths": {
      "@shared/*": ["shared/*"],
      "@core/*": ["core/*"],
      "@features/*": ["features/*"],
      "@product/*": ["features/product/*"],
      "@users/*": ["features/users/*"],
      "@orders/*": ["features/orders/*"],
      "@categories/*": ["features/categories/*"]
    }
  },
  "exclude": ["node_modules"]
}
